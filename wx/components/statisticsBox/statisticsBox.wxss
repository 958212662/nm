page {
  height: 100%;
  background: #FFFFFF;
}

.page {
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  height: 100%;
  background: #fff;
  overflow: hidden;
}

.nav {
  position: relative;
  z-index: 99;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #d1d3d4;
  border-bottom: 1px solid #d1d3d4;
  background: #fff;
}

.nav-search {
  background: #EEEEEE;
}

.nav-searchBox {
  position: relative;
  display: flex;
  border-top: 1px solid #d1d3d4;
  border-bottom: 1px solid #d1d3d4;
  background: #fff;
}

.nav-son {
  display: flex;
  width: 50%;
  text-align: center;
  height: 40px;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

.nav-date {
  display: flex;
  width: 100%;
  text-align: center;
  height: 40px;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

.content {
  display: inline-block;
}

.icon {
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #9b9b9b;
  margin-left: 5px;
}

.borders {
  border-left: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
}

.org {
  width: 80%;
  margin: auto 10%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.temp {
  position: relative;
  z-index: 4;
}

.disappear {
  display: none;
}

.selector-container {
  position: absolute;
  width: 100%;
  height: 300rpx;
  background-color: white;
}

.selector-picker {
  display: flex;
  border: 1rpx solid #666;
  width: 300rpx;
  height: 50rpx;
}

.selector-picker view {
  width: 100%;
}

.selector-title {
  margin: 10rpx 10rpx;
  font-size: 16px;
}

.selector-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin-left: 10rpx;
}

.selector-body image {
  width: 48rpx;
  height: 48rpx;
}

.button-line {
  width: 100%;
  height: 2rpx;
  background-color: #8b8b8b;
  margin-top: 30rpx;
}

.selector-foot {
  margin-left: 15%;
  margin-top: 30rpx;
  font-size: 16px;
}

.button-group {
  display: flex;
  width: 80%;
  justify-content: space-between;
}

.reset {
  width: 240rpx;
  height: 60rpx;
  background-color: #e4e4e4;
  color: #a7a7a7;
  text-align: center;
  line-height: 60rpx;
}

.confirm {
  width: 240rpx;
  height: 60rpx;
  background-color: #3545a6;
  color: white;
  text-align: center;
  line-height: 60rpx;
}

.fullbg {
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  opacity: 0.5;
}

@keyframes slidown {
  from {
    transform: translateY(-100%);
  }

  to {
    transform: translateY(0%);
  }
}

.slidown {
  display: block;
  animation: slidown 0.2s ease-in both;
}

@keyframes slidup {
  from {
    transform: translateY(0%);
  }

  to {
    transform: translateY(-100%);
  }
}

.slidup {
  display: block;
  animation: slidup 0.2s ease-in both;
}

.down-triangle {
  display: flex;
  align-items: center;
}

.down-triangle::after {
  content: "";
  width: 0;
  height: 0;
  border: 5px solid transparent;
  border-top: 8px solid #9b9b9b;
  display: inline-block;
  margin-left: 5rpx;
  margin-top: 20rpx;
}

.drop-down {
  display: flex;
  align-items: center;
}

.drop-down::after {
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-bottom: 2rpx solid black;
  border-right: 2rpx solid black;
  transform: rotate(45deg);
  display: block;
  margin-left: 15rpx;
}