Page{
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.container image{
  width: 160rpx;
  height: 160rpx;
}

.item {
  display: flex;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 40rpx;
  border-bottom: 1rpx solid #ddd;

}

.left {
  width: 180rpx;
  font-size: 14px;
  color: #565656;
}

.right{
  width: 400rpx;
  font-size: 14px;
}

.media {
  height: 200rpx;
}

.media image{
  margin-top: 20rpx;
}

.media video{
  margin-top: 20rpx;
}

.right image{
  margin-right: 20rpx;
}


.right video{
  width: 180rpx;
  height: 180rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.describe {
  border-bottom: 0rpx solid #ddd;
  word-break: break-all;
}