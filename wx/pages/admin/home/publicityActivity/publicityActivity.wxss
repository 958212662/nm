Page {
  background-color: #EEEEEE
}

.container_body {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx; 

}

.container_item {
  display: flex;
  height: 200rpx;
  background-color: white;
  align-items: center;
  border-bottom: 1rpx solid #cccccc;
  border-left: 1rpx solid #cccccc;
  border-right: 1rpx solid #cccccc;
}

.left {
  margin-left: 20rpx;
}

.left image{
  width: 160rpx;
  height: 160rpx;
}

.right {
  margin-left: 40rpx;
  height: 160rpx;
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.right_headle{
  font-size: 16px;
}

.right_body{
  display: flex;
  color: #999999;
  font-size: 14px;
}

.right_body view{
  width: 90%;
}

.right_foot {
  color: #999999;
  font-size: 14px;
}

.more {
  width: 100%;
  height: 68rpx;
  color: #aaaaaa;
  font-size: 14px;
  line-height: 68rpx;
  text-align: center;
}


.add_anatomy {
  /*子绝父相*/
  
}

.add_anatomy::after{
  /*通过伪元素设置一像素的右边框*/
  content: "新增";
  /*定位，不占位置*/
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 14px;
  background-color: #ff9a68;
  color: white;
  border-radius: 60rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}

.date-button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  font-size: 16px;
  height: 70rpx;
  line-height: 70rpx;
  color: #686868;
  background-color: white;
}


.drop-down {
  display: flex;
  align-items: center;
}

.drop-down::after {
  content: "";
  width: 15rpx;
  height: 15rpx;
  margin-left: 20rpx;
  border-bottom: 2rpx solid black;
  border-right: 2rpx solid black;
  transform: rotate(45deg);
  display: block;
  margin-bottom: 10rpx;
}