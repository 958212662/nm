  line-height: 70rpx;
}

/* 功能封装3 右拉符*/

.drop-right {
  display: flex;
  align-items: center;
}

.drop-right::after {
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-top: 6rpx solid #9a9a9a;
  border-right: 6rpx solid #9a9a9a;
  transform: rotate(45deg);
  display: block;
  margin-left: 5rpx;
}

.separate-line {
  width: 100%;
  height: 2rpx;
  border: 2rpx dashed #ccc;
}

.antiepidemic-item {
  border-bottom: 2rpx dashed #ccc;
}

.epidemicPic image {
  width: 160rpx;
  height: 160rpx;
}

.epidemicPic video {
  width: 160rpx;
  height: 160rpx;
}

.foot {
  width: 100%;
  height: 68rpx;
  color: #aaa;
  font-size: 14px;
  line-height: 68rpx;
  text-align: center;
}

.last-item {
  border-bottom: 0rpx dashed #ccc;
}

.antiepidemic-add::after {
  /*通过伪元素设置一像素的右边框*/
  content: "防疫登记";
  /*定位，不占位置*/
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  right: 10rpx;
  bottom: 270rpx;
  /* bottom: 400rpx; */
  font-size: 14px;
  background-color: #ff9a68;
  color: white;
  border-radius: 60rpx;
