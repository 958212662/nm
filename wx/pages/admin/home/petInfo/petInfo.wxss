/* 犬只列表 */

.dogInfo {
  margin-top: 30rpx;
  height: 60rpx;
  font-size: 16px;
  line-height: 70rpx;
  margin-left: 40rpx;
}

.container_body {
  display: flex;
  flex-direction: column;
