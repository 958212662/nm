}

.container_item {
  display: flex;
  width: 93%;
  height: 200rpx;
  margin-left: 20rpx;
  background-color: white;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}

.left {
  margin-left: 20rpx;
}

.left image {
  width: 160rpx;
  height: 160rpx;
}

.right {
  margin-left: 40rpx;
  height: 160rpx;
  width: 420rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.right_headle {
  font-size: 16px;
}

.right_body {
  display: flex;
  width: 380rpx;
  justify-content: space-between;
  color: #999;
  font-size: 14px;
}

.right_foot {
  color: #999;
  font-size: 14px;
}

.foot {
  height: 70rpx;
