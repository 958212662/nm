.container_body {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx; 

}

.container_item {
  display: flex;
  height: 200rpx;
  background-color: white;
  align-items: center;
  border-bottom: 1rpx solid #cccccc;
  border-left: 1rpx solid #cccccc;
  border-right: 1rpx solid #cccccc;
}

.body {
  width: 82%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 40rpx;
}

.title {
  display: flex;
  font-size: 16px;
  color: #999999;
}

.left {
  width: 150rpx;
}

.deviceNo {
   color: black;
}

.middle {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #999999
}

.foot {
  display: flex;
  font-size: 14px;
  color: #999999;
}

.more {
  width: 100%;
  height: 68rpx;
  position: absolute;
  bottom: 0;
  color: #aaaaaa;
  font-size: 14px;
  line-height: 68rpx;
  text-align: center;
}


