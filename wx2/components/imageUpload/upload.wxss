.image-group {
  display: flex;
  white-space: nowrap;
}

.image-group image {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.imageItem {
  display: inline-block;
  position: relative;
}

.uploadImage {
  display: inline-block;
}

.deleteIcon {
  position: absolute;
  top: 10rpx;
  right: -10rpx;
}

.deleteIcon image {
  width: 40rpx;
  height: 40rpx;
}
