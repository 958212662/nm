.container_body {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.container_item {
  display: flex;
  height: 200rpx;
  background-color: white;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}

.left {
  margin-left: 20rpx;
}

.left image {
  width: 160rpx;
  height: 160rpx;
}

.right {
  margin-left: 40rpx;
  height: 160rpx;
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.right_headle {
  font-size: 16px;
 
}
.right_headle>view {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}


.right_body{
  display: flex;
  color: #999999;
  font-size: 23rpx;
}

.right_body view{
  width: 300rpx;
}



.right_foot {
  color: #999;
  font-size: 14px;
}

.more {
  width: 100%;
  height: 68rpx;
  color: #aaa;
  font-size: 14px;
  line-height: 68rpx;
  text-align: center;
}

