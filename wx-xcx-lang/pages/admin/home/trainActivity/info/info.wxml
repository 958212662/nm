<!--pages/home/antiepidemic/info/info.wxml-->
<view class='container'> 
    <view class='item'>
        <view class='left'>
            <!-- <text>时间：</text> -->
            <text>{{ LG.get(L,"shijian") }}：</text>
        </view>
        <view class='right'>
            <text>{{ activityInfo.activityTime }}</text>
        </view>
    </view>

    <view class='item'>
        <view class='left'>
            <!-- <text>地点：</text> -->
            <text>{{ LG.get(L,"didian") }}：</text>
        </view>
        <view class='right'>
            <text>{{ activityInfo.activityAddress }}</text>
        </view>
    </view>

    <view class='item'>
        <view class='left'>
            <!-- <text>举办单位：</text> -->
            <text>{{ LG.get(L,"jibandanwei") }}：</text>
        </view>
        <view class='right'>
            <text>{{ activityInfo.holdOrgName }}</text>
        </view>
    </view>

     <view class='item'>
        <view class='left'>
            <!-- <text>培训对象：</text> -->
            <text>{{ LG.get(L,"peixunduixiang") }}：</text>
        </view>
        <view class='right'>
            <text>{{ activityInfo.activityTarget }}</text>
        </view>
    </view>

     <view class='item'>
        <view class='left'>
            <!-- <text>参与人数：</text> -->
            <text>{{ LG.get(L,"caiyurenshu") }}：</text>
        </view>
        <view class='right'>
            <text>{{ activityInfo.participateAmount }}</text>
        </view>
    </view>

    <view class='adaptive-height'>
        <view class='left'>
            <!-- <text>主题：</text> -->
            <text>{{ LG.get(L,"zhuti") }}：</text>
        </view>
        <view class='right'>
            <text>{{ activityInfo.activitySubject }}</text>
        </view>
    </view>

    <view class='adaptive-height'>
        <view class='left'>
            <!-- <text>内容：</text> -->
            <text>{{ LG.get(L,"neirong") }}：</text>
        </view>
        <view class='right'>
            <text>{{ activityInfo.activityContent }}</text>
        </view>
    </view>

    <view class='adaptive-height'>
        <view class='left'>
            <!-- <text>图片：</text> -->
             <text>{{ LG.get(L,"tupian") }}：</text>
        </view>
        <view class='right'>
           <block wx:for="{{ activityInfo.picUrlList }}" wx:key="index">
               <image src='{{ activityInfo.picUrlList[index].url }}' bindtap='previewImage' data-index='{{ index }}'></image>
           </block>
        </view>
    </view>

    <view class='adaptive-height'>
        <view class='left'>
            <!-- <text>视屏：</text> -->
            <text>{{ LG.get(L,"shipin") }}：</text>
        </view>
        <view class='right'>
           <block wx:for="{{ activityInfo.videoUrlList }}" wx:key="index">
               <video src='{{ item.url }}' objectFit="contain"></video>
           </block>
        </view>
    </view>

</view>


<wxs module="LG" src="../../../../../utils/lang.wxs" />