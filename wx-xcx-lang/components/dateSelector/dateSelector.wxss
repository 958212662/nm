.page {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: white;
  z-index: 1;
}

.body {
  width: 100%;
  height: 100%;
  background-color: #999;
}

.selector-container {
  position: absolute;
  width: 100%;
  height: 300rpx;
  background-color: white;
}

.picker {
  display: flex;
  border: 1rpx solid #666;
  width: 300rpx;
  height: 50rpx;
}

.picker view {
  width: 100%;
}

.selector-title {
  margin: 10rpx 10rpx;
  font-size: 16px;
}

.selector-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin-left: 10rpx;
}

.selector-body image {
  width: 48rpx;
  height: 48rpx;
}

.button-line {
  width: 100%;
  height: 2rpx;
  background-color: #8b8b8b;
  margin-top: 30rpx;
}

.selector-foot {
  margin-left: 15%;
  margin-top: 30rpx;
  font-size: 16px;
}

.button-group {
  display: flex;
  width: 80%;
  justify-content: space-between;
}

.reset {
  width: 240rpx;
  height: 60rpx;
  background-color: #e4e4e4;
  color: #a7a7a7;
  text-align: center;
  line-height: 60rpx;
}

.confirm {
  width: 240rpx;
  height: 60rpx;
  background-color: #3545a6;
  color: white;
  text-align: center;
  line-height: 60rpx;
}

.splitLine {
  border-right: 2rpx solid #cdcdcd;
}


