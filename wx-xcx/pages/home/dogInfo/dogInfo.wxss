}

.add_dog::after{
  /*通过伪元素设置一像素的右边框*/
  content: "新增犬只";
  /*定位，不占位置*/
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 14px;
  background-color: #ff9a68;
  color: white;
  border-radius: 60rpx;
  box-sizing: border-box;
  padding: 25rpx 30rpx;
}

/* 功能封装 项圈绑定 */
.bind{
  display: flex;
  justify-content: space-between;
}

.bind::after {
  content: "项圈绑定";
  width: 160rpx;
  height: 60rpx;
  display: block;
  font-size: 15px;
  text-align: center;
  line-height: 60rpx;
  background-color: #0368FF;
  color: white;
  border-radius: 10rpx;
}

/* 功能封装 解除项圈绑定 */
.unbind{
  display: flex;
  justify-content: space-between;
}

.unbind::after {
  content: "项圈解绑";
  width: 160rpx;
  height: 60rpx;
  display: block;
  font-size: 15px;
  text-align: center;
  line-height: 60rpx;
  background-color: #68CDFF;
  color: white;
  border-radius: 10rpx;
}